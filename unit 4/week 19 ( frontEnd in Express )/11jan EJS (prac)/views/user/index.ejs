<%-include("../component/header",{
    title : "Home",
    cssLink : "/css/index.css"
}) %>
<body>
    <%- include("../component/navbar") %>
    <div class="navSpacing" style="margin-top: 100px;"></div>

    <div class="displayBox">

        <figure class="text-center">
            <blockquote class="blockquote">
                <p>A list of all users that we are having as a todo list.</p>
            </blockquote>
            <figcaption class="blockquote-footer">
                Someone famous but not <cite title="Source Title">Sarthak bakshi</cite>
            </figcaption>
        </figure>
        
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th></th>
                </tr>
        
            </thead>
        
            <% item.map( (user,index)=>{ %>
        
                <tr>
                    <td> <%= user.first_name %> </td>
                    <td> <%= user.last_name %>  </td>
                    <td> <%= user.age %>        </td>
                    <td> <%= user.email %>      </td>
                    <td> <a href="#"> <button type="button" 
                         class="btn btn-sm btn-outline-primary w-100">Edit
                         </button>  </a>
                    </td>
                    <td> <a href="#"> <button type="button" 
                         class="btn btn-sm btn-outline-danger w-100">Delete
                        </button> </a>
                    </td>
                </tr>
        
                <% }) %>
        
        
        
        
        </table>

    </div>
    
    
    
</body>
</html>
